<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="600.0" maxWidth="800.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookingbarber.sys.orm.view.HistoricoViewController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label fx:id="tituloLabel" text="Histórico de Agendamentos">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <TableView fx:id="historicoTableView" prefHeight="400.0">
        <columns>
          <TableColumn fx:id="colunaData" prefWidth="150.0" text="Data/Hora" />
          <TableColumn fx:id="colunaProfissional" prefWidth="150.0" text="Profissional" />
          <TableColumn fx:id="colunaServicos" prefWidth="250.0" text="Serviços" />
          <TableColumn fx:id="colunaValor" prefWidth="100.0" text="Valor Total" />
          <TableColumn fx:id="colunaStatus" prefWidth="120.0" text="Status" />
        </columns>
      </TableView>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label fx:id="statusLabel" HBox.hgrow="ALWAYS" />
            <Button fx:id="cancelarButton" mnemonicParsing="false" onAction="#handleCancelarAgendamento" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Cancelar Selecionado" />
            <Button mnemonicParsing="false" onAction="#handleVoltar" text="Voltar" />
         </children>
      </HBox>
   </children>
</VBox>